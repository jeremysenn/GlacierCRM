- model_class = Event
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @event.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @event.description
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @event.user_id
%p
  %strong= model_class.human_attribute_name(:contact_id) + ':'
  %br
  = @event.contact_id
%p
  %strong= model_class.human_attribute_name(:mission_id) + ':'
  %br
  = @event.mission_id
%p
  %strong= model_class.human_attribute_name(:starts_at) + ':'
  %br
  = @event.starts_at
%p
  %strong= model_class.human_attribute_name(:ends_at) + ':'
  %br
  = @event.ends_at
%p
  %strong= model_class.human_attribute_name(:where) + ':'
  %br
  = @event.where

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), events_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_event_path(@event), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), event_path(@event), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

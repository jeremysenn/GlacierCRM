- model_class = Event
.page-header
  %h1
    %i.icon-calendar
    =t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:contact_id)
      %th= model_class.human_attribute_name(:mission_id)
      %th= model_class.human_attribute_name(:starts_at)
      %th= model_class.human_attribute_name(:ends_at)
      %th= model_class.human_attribute_name(:where)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @events.each do |event|
      %tr
        %td= link_to event.id, event_path(event)
        %td= event.title
        %td= event.description
        %td= event.user_id
        %td= event.contact_id
        %td= event.mission_id
        %td= event.starts_at
        %td= event.ends_at
        %td= event.where
        %td=l event.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_event_path(event), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), event_path(event), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_event_path, :class => 'btn btn-primary'

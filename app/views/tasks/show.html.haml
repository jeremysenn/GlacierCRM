- model_class = Task
.page-header
  %h1
    %i.icon-tasks
    =t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @task.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @task.description
%p
  %strong= model_class.human_attribute_name(:contact_id) + ':'
  %br
  = @task.contact_id
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @task.user_id
%p
  %strong= model_class.human_attribute_name(:mission_id) + ':'
  %br
  = @task.mission_id
%p
  %strong= model_class.human_attribute_name(:completed) + ':'
  %br
  = @task.completed
%p
  %strong= model_class.human_attribute_name(:due_at) + ':'
  %br
  = @task.due_at
%p
  %strong= "Documents:"
  - @task.documents.each do |document|
    %p= link_to document.title, document_path(document)

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), tasks_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_task_path(@task), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), task_path(@task), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

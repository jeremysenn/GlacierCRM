- model_class = Document
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = link_to @document.title, @document.document_url
%p
  %strong= "Belongs to:"
  %br
  = link_to @document.documentable_type, @document.documentable

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), documents_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_document_path(@document), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), document_path(@document), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

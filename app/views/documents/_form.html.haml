= simple_form_for @document, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :document
  = f.input :documentable_id
  = f.input :documentable_type
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), documents_path, :class => 'btn'

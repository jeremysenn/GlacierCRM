= simple_form_for @company, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :document_url, :input_html => {:class => 'span4'}
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), companies_path, :class => 'btn'

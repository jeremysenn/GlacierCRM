  =# image_tag("moose_logo_small.png")
  .text-error
    %i.icon-road
    = current_user.company.name if user_signed_in?
.nav-collapse.collapse
  - if user_signed_in?
    %ul.nav
      - if false
        %li{:class => params[:controller] == "home" ? "active" : ""}
          %a{:href => root_path}
            %strong
              %i.icon-road
              Runway
      %li.dropdown{:class => params[:controller] == "contacts" ? "active" : ""}
        %a{:href => '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'}}
          %strong
            %i.icon-user
            
            %b.caret
        %ul.dropdown-menu
          %li
            %a{:href => contacts_path}
              All Contacts
          %li
            %a{:href => new_contact_path}

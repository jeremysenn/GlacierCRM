      %li.dropdown{:class => params[:controller] == "missions" ? "active" : ""}
        %a{:href => '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'}}
          %strong
            %i.icon-plane
            
            %b.caret
        %ul.dropdown-menu
          %li
            %a{:href => missions_path}
              All Missions
          %li
            %a{:href => new_mission_path}
              New Mission
          %li.divider
          %li
            %a{:href => nil}
              %i.icon-calendar
              
          %li.divider
          %li
            %a{:href => nil}
              %i.icon-pencil
              Emails
      %li.dropdown{:class => params[:controller] == "tasks" ? "active" : ""}
        %a{:href => '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'}}
          %strong
            %i.icon-tasks
            
            %b.caret
        %ul.dropdown-menu
          %li
            %a{:href => tasks_path}
              All Tasks
          %li
            %a{:href => new_task_path}
              New Task
      %li.dropdown{:class => params[:controller] == "events" ? "active" : ""}
        %a{:href => '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'}}
          %strong
            %i.icon-calendar
            
            %b.caret
        %ul.dropdown-menu
          %li
            %a{:href => events_path}
              All Events
          %li
            %a{:href => new_event_path}
              New Event
      %li.dropdown{:class => params[:controller] == "emails" ? "active" : ""}
        %a{:href => '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'}}
          %strong
            %i.icon-pencil

            %b.caret
        %ul.dropdown-menu
          %li
            %a{:href => nil}
              All Emails
          %li
            %a{:href => nil}
              New Email
      %li.dropdown{:class => params[:controller] == "companies" ? "active" : ""}
        %a{:href => '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'}}
          %strong
            %i.icon-briefcase
            
            %b.caret
        %ul.dropdown-menu
          %li
            %a{:href => company_path(current_user.company) + '#documents'}
              %i.icon-file
              Documents
          %li
            %a{:href => company_path(current_user.company) + '#reports'}
              %i.icon-bar-chart
              Reports
    .navbar-form.pull-right{:style => 'margin-bottom: 5px;'}
      = form_tag('/searches', :method => "get", :class => "navbar-search form-search") do
        .input-append
          = text_field_tag :q, nil, :placeholder => "Search", :id => "appendedInputButton", :class => 'span2 search-query'
          = button_tag(:type => 'submit', :class => 'btn') do
            %i.icon-search
      %ul.nav.pull-right
        %li.divider-vertical
        %li.dropdown
          %a{:href => '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'}}
            %strong
              %i.icon-cog
              %b.caret
          %ul.dropdown-menu
            %li
              %a{:href => edit_user_registration_path}
                %strong= raw("#{current_user.name}")
                %br
                %small
                  %i.icon-edit
                  = "Edit settings"
            %li.divider
              - if current_user.has_role? :admin
                %li= link_to('Users', users_path)
                %li.divider
                %li= link_to('Companies', companies_path)
                %li.divider
              %li= link_to '<i class="icon-question-sign"></i> Help'.html_safe, '#'
              %li= link_to '<i class="icon-off"></i> Log out'.html_safe, destroy_user_session_path, :method=>'delete', :confirm => "Are you sure you want to log out?", :title => "Log out"
        %li.divider-vertical
        %li.dropdown
          %a{:href => '#', :id => 'menu_arrow', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'}}
            %strong
              %i.icon-ok-sign
              %b.caret
  - else
    %ul.nav
      %li= link_to "WHAT IS IT?", '#'
      %li= link_to "HOW IT WORKS", '#'
      %li= link_to "ABOUT US", '#'

- if false
  %ul.nav
    - if user_signed_in?
      %li
        = link_to 'Logout', destroy_user_session_path, :method=>'delete'
    - else
      %li
        = link_to 'Login', new_user_session_path
    - if user_signed_in?
      %li
        = link_to 'Edit account', edit_user_registration_path
      - if current_user.has_role? :admin
        %li
          = link_to 'Admin', users_path
    - else
      %li
        = link_to 'Sign up', new_user_registration_path
!!!
%html

  %head
    %title
      = yield(:title) || "Untitled"
    = favicon_link_tag 'favicon.ico'
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tag
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    = yield(:head)

  %body
    #container
      - flash.each do |name, msg|
        %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          = content_tag :div, msg, :id => "flash_#{name}"

      %h1= yield(:title)
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{:href => root_path}
              = image_tag("moose_logo_small.png")
            .nav-collapse.collapse
              %ul.nav
                %li
                  %a{:href => '#'}
                    %i.icon-question-sign
                    WHAT IS IT?
                %li
                  %a{:href => '#'}
                    %i.icon-road
                    HOW IT WORKS
                %li
                  %a{:href => '#'}
                    %i.icon-comment
                    ABOUT US
              - unless current_user
                .navbar-form.pull-right
                  = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-search' }) do |f|
                    = f.input_field :email, :label => false, :autofocus => true, :placeholder => "Email", :input_html => {:class => 'input-medium'}
                    = f.input_field :password, :label => false, :placeholder => "Password", :input_html => {:class => 'input-medium'}
                    = f.button :submit, 'Sign in'.html_safe, :class => 'btn btn-success'

      = yield
      #footer
        .container-narrow
          %p{:class => "muted credit", :style => "text-align:center"}
            = image_tag("moose_logo_small.png")
            = "GlacierWealth Runway - Copyright #{Date.today.year}"

:javascript
  var $alert = $('.alert').alert()
  setTimeout(function () {
    $alert.alert('close')
  }, 5000)
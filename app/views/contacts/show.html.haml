- model_class = Contact
.row-fluid
  .span3
    .sidebar-nav{:style => "border-right: 2px solid #B7410E; margin-right: 0; padding-right: 19px;"}
      - if @contact.tagged_with("Client") or @contact.tagged_with("Personal")
        = render :partial => 'client_show'
      - elsif @contact.tagged_with("Company")
        = render :partial => 'company_show'

  .span9
    .tabbable{}
      .btn-group
        %ul.nav.nav-pills
          %li.active
            %a{:href => "#projects", :data => {:toggle => "tab"}}
              %button.btn
                %strong
                  %i.icon-star
                  Projects
          %li
            %a{:href => "#appointments", :data => {:toggle => "tab"}}
              %button.btn
                %strong
                  %i.icon-calendar
                  Appointments
          %li
            %a{:href => "#tasks", :data => {:toggle => "tab"}}
              %button.btn
                %strong
                  %i.icon-tasks
                  Tasks
          %li
            %a{:href => "#emails", :data => {:toggle => "tab"}}
              %button.btn
                %strong
                  %i.icon-pencil
                  Emails
          %li
            %a{:href => "#documents", :data => {:toggle => "tab"}}
              %button.btn
                %strong
                  %i.icon-file
                  Documents
      %hr{:style => "border: 1px solid #B7410E; margin-top:0px;"}
    .tab-content{}
      .tab-pane.active{:id => "projects"}
        Projects
      .tab-pane{:id => "appointments"}
        Appointments
      .tab-pane{:id => "tasks"}
        Tasks
      .tab-pane{:id => "emails"}
        Emails
      .tab-pane{:id => "documents"}
        %iframe{:allowscriptaccess => "always", :id => 'client_iframe', :allowFullScreen => "true", :frameborder => "0", :style => "margin-left: 0px; height: 678px; margin-top: 0px; width: 826px;", :src => "#{@contact.document_url}", :title => "Documents"}

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), contacts_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_contact_path(@contact), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), contact_path(@contact), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

        %td= f.input :home_state, :placeholder => "Home State", :label => "Home State", :input_html => {:class => 'input-medium'}
        %td= f.input :home_postal_code, :placeholder => "Home Postal Code", :label => "Home Postal Code", :input_html => {:class => 'input-medium'}
  %hr
  %table
    %tbody
      %tr
        %td= f.input :business_street, :placeholder => "Business Street", :label => "Business Street", :input_html => {:class => 'input-medium'}
        %td= f.input :business_street_2, :placeholder => "Business Street 2", :label => "Business Street 2", :input_html => {:class => 'input-medium'}
        %td= f.input :business_street_3, :placeholder => "Business Street 3", :label => "Business Street 3", :input_html => {:class => 'input-medium'}
      %tr
        %td= f.input :business_city, :placeholder => "Business City", :label => "Business City", :input_html => {:class => 'input-medium'}
        %td= f.input :business_state, :placeholder => "Business State", :label => "Business State", :input_html => {:class => 'input-medium'}
        %td= f.input :business_postal_code, :placeholder => "Business Postal Code", :label => "Business Postal Code", :input_html => {:class => 'input-medium'}
      %tr
        %td= f.input :business_address_po_box, :placeholder => "Business PO Box", :label => "Business PO Box", :input_html => {:class => 'input-medium'}
        %td= f.input :billing_information, :placeholder => "Billing Information", :label => "Billing Information", :input_html => {:class => 'input-medium'}
  %hr
  %table
    %tbody
      %tr
        %td= f.input :other_street, :placeholder => "Other Street", :label => "Other Street", :input_html => {:class => 'input-medium'}
        %td= f.input :other_street_2, :placeholder => "Other Street 2", :label => "Other Street 2", :input_html => {:class => 'input-medium'}
        %td= f.input :other_street_3, :placeholder => "Other Street 3", :label => "Other Street 3", :input_html => {:class => 'input-medium'}

        %td= f.input :other_state, :placeholder => "Other State", :label => "Other State", :input_html => {:class => 'input-medium'}
        %td= f.input :other_postal_code, :placeholder => "Other Postal Code", :label => "Other Postal Code", :input_html => {:class => 'input-medium'}
  %table
    %tbody
      %tr
        %td= f.input :notes, :input_html => {:class => 'span6', :rows => 10}
  
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), contacts_path, :class => 'btn'

%script
  $(".phone").mask("(999) 999-9999");
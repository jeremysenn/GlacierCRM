= simple_form_for @todo, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title, :input_html => {:class => "span4"}
  = f.input :description, :input_html => {:class => "span4", :rows => 4}
  = f.input :completed
  = f.hidden_field :user_id, :value => current_user.id
  = f.association :mission, collection: current_user.missions.find_all_by_completed(:false), prompt: "Assign to a Mission"
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), todos_path, :class => 'btn'

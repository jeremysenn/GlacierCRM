- model_class = Todo
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @todo.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @todo.description
%p
  %strong= model_class.human_attribute_name(:completed) + ':'
  %br
  = @todo.completed? ? 'Yes' : 'No'

%p
  %strong= model_class.human_attribute_name(:mission_id) + ':'
  %br
  = @todo.mission ? @todo.mission.title : 'None'

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), todos_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_todo_path(@todo), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), todo_path(@todo), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
